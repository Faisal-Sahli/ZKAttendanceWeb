@model ZKAttendanceWeb.Models.Branch

@{
    ViewData["Title"] = "تعديل الفرع";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 2rem;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 1.5rem;
        border-bottom: 2px solid #dee2e6;
    }

    .form-section {
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border-radius: 8px;
        border: 2px solid #e9ecef;
        padding: 0.75rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.15);
        }

    .required-field::after {
        content: " *";
        color: #dc3545;
    }

    .form-actions {
        background: #f8f9fa;
        padding: 1.5rem 2rem;
        border-top: 2px solid #dee2e6;
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
    }

    .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        border: none;
        color: #212529;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
        }

    .info-badge {
        background: #e3f2fd;
        color: #1976d2;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.875rem;
        display: inline-block;
        margin-bottom: 1rem;
    }
</style> <div class="container-fluid" dir="rtl">
    <!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-edit me-2"></i>
                تعديل الفرع
            </h2>
            <p class="mb-0 opacity-75">تحديث معلومات الفرع: @Model.BranchName</p>
        </div>
        <a asp-action="Index" class="btn btn-light btn-lg">
            <i class="fas fa-arrow-right me-2"></i>
            العودة للقائمة
        </a>
    </div>
</div>

<!-- Form Card -->
<div class="form-card">
    <div class="form-header">
        <h5 class="mb-0">
            <i class="fas fa-building me-2"></i>
            معلومات الفرع
        </h5>
    </div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BranchId" />
        <input type="hidden" asp-for="CreatedDate" />
        
        <div class="form-section">
            
            <!-- Info Badge -->
            <div class="info-badge">
                <i class="fas fa-info-circle me-1"></i>
                تم إنشاء الفرع في: @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")
            </div>

            <!-- Row 1: Branch Code & Name -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="BranchCode" class="form-label required-field">رمز الفرع</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-barcode"></i>
                        </span>
                        <input asp-for="BranchCode" 
                               class="form-control" 
                               required 
                               maxlength="20" />
                    </div>
                    <span asp-validation-for="BranchCode" class="text-danger"></span>
                </div>

                <div class="col-md-8 mb-3">
                    <label asp-for="BranchName" class="form-label required-field">اسم الفرع</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-building"></i>
                        </span>
                        <input asp-for="BranchName" 
                               class="form-control" 
                               required 
                               maxlength="200" />
                    </div>
                    <span asp-validation-for="BranchName" class="text-danger"></span>
                </div>
            </div>

            <!-- Row 2: City & Address -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="City" class="form-label">المدينة</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-map-marker-alt"></i>
                        </span>
                        <input asp-for="City" 
                               class="form-control" 
                               list="citiesList" />
                    </div>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="col-md-8 mb-3">
                    <label asp-for="Address" class="form-label">العنوان</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-location-dot"></i>
                        </span>
                        <textarea asp-for="Address" 
                                  class="form-control" 
                                  rows="2"
                                  maxlength="500"></textarea>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <!-- Row 3: Contact Info -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ContactPerson" class="form-label">الشخص المسؤول</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user-tie"></i>
                        </span>
                        <input asp-for="ContactPerson" 
                               class="form-control" 
                               maxlength="100" />
                    </div>
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ContactPhone" class="form-label">رقم الهاتف</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-phone"></i>
                        </span>
                        <input asp-for="ContactPhone" 
                               class="form-control" 
                               type="tel"
                               maxlength="20" />
                    </div>
                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                </div>
            </div>

            <!-- Row 4: Active Status -->
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" 
                               class="form-check-input" 
                               type="checkbox" 
                               role="switch" />
                        <label asp-for="IsActive" class="form-check-label">
                            <strong>تفعيل الفرع</strong>
                            <small class="text-muted d-block">عند إلغاء التفعيل، لن يظهر الفرع في النظام</small>
                        </label>
                    </div>
                </div>
            </div>

        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <a asp-action="Details" asp-route-id="@Model.BranchId" class="btn btn-info">
                <i class="fas fa-eye me-2"></i>
                عرض التفاصيل
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>
                إلغاء
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>
                حفظ التعديلات
            </button>
        </div>
    </form>
</div>

<!-- Cities Datalist -->
<datalist id="citiesList">
        <option value="" />
        <option value="" />
        <option value=" " />
        <option value=" " />
        <option value="" />
        <option value="فرسان" />
        <option value="العارضه" />
        <option value="العيدابي" />
        <option value="صبيا" />
        <option value="الشقيق" />
        <option value="خميس مشيط" />
        <option value="ابها" />
        <option value="الدرب" />
        <option value="المضايا" />
        <option value="احدالمسارحه" />
        <option value="صامطه" />
        <option value="جازان" />
</datalist>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}