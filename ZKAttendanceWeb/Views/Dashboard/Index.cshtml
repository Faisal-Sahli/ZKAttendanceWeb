@{
    ViewData["Title"] = "لوحة المعلومات";

    var totalEmployees = ViewBag.TotalEmployees as int? ?? 0;
    var totalBranches = ViewBag.TotalBranches as int? ?? 0;
    var totalDevices = ViewBag.TotalDevices as int? ?? 0;
    var activeDevices = ViewBag.ActiveDevices as int? ?? 0;

    var todayAttendance = ViewBag.TodayAttendance as int? ?? 0;

    var lastSyncTime = ViewBag.LastSyncTime as DateTime?;
    var deviceErrors = ViewBag.DeviceErrors as List<ZKAttendanceWeb.Models.DeviceError> ?? new List<ZKAttendanceWeb.Models.DeviceError>();
}

<style>
    /* Dashboard Styles */
    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2.5rem;
        border-radius: 15px;
        margin-bottom: 2.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .dashboard-header h2 {
            margin: 0;
            font-weight: 700;
            font-size: 2rem;
        }

        .dashboard-header p {
            margin: 0.5rem 0 0 0;
            opacity: 0.9;
            font-size: 1.1rem;
        }

    .sync-badge {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-size: 0.875rem;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
        height: 100%;
        text-align: center;
    }

        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

    .stat-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        margin: 0 auto 1.5rem;
    }

        .stat-icon.primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .stat-icon.success {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(17, 153, 142, 0.3);
        }

        .stat-icon.info {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(79, 172, 254, 0.3);
        }

        .stat-icon.warning {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(240, 147, 251, 0.3);
        }

    .stat-value {
        font-size: 3rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #6c757d;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .stat-link {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        background: transparent;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.875rem;
        transition: all 0.2s ease;
    }

        .stat-link:hover {
            border-color: #667eea;
            background: #667eea;
            color: white;
            text-decoration: none;
        }

    .quick-actions-section {
        margin-top: 3rem;
    }

    .section-title {
        font-weight: 700;
        font-size: 1.5rem;
        color: #212529;
        margin-bottom: 1.5rem;
    }

    .quick-action-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2.5rem 1.5rem;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        background: white;
        color: #212529;
        text-decoration: none;
        transition: all 0.3s ease;
        height: 100%;
    }

        .quick-action-card:hover {
            border-color: #667eea;
            background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(102, 126, 234, 0.2);
            color: #667eea;
            text-decoration: none;
        }

    .quick-action-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #667eea;
    }

    .quick-action-title {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .alert-custom {
        border: none;
        border-radius: 12px;
        padding: 1.5rem;
        margin-top: 2rem;
    }
</style>

<div class="container-fluid" dir="rtl">

    <!-- Header -->
    <div class="dashboard-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>لوحة المعلومات</h2>
                <p>مرحباً بك في نظام الحضور والانصراف</p>
            </div>
            @if (lastSyncTime.HasValue)
            {
                <div class="sync-badge">
                    <i class="fas fa-sync-alt me-2"></i>
                    آخر تحديث: @lastSyncTime.Value.ToString("hh:mm tt")
                </div>
            }
        </div>
    </div>

    <!-- Main Stats Cards -->
    <div class="row g-4">

        <!-- Total Employees -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon primary">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-value">@totalEmployees</div>
                <div class="stat-label">إجمالي الموظفين</div>
                <a asp-controller="Employees" asp-action="Index" class="stat-link">
                    عرض الكل <i class="fas fa-arrow-left ms-1"></i>
                </a>
            </div>
        </div>

        <!-- Total Branches -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon success">
                    <i class="fas fa-building"></i>
                </div>
                <div class="stat-value">@totalBranches</div>
                <div class="stat-label">عدد الفروع</div>
                <a asp-controller="Branches" asp-action="Index" class="stat-link">
                    عرض الكل <i class="fas fa-arrow-left ms-1"></i>
                </a>
            </div>
        </div>

        <!-- Active Devices -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon info">
                    <i class="fas fa-fingerprint"></i>
                </div>
                <div class="stat-value">@activeDevices / @totalDevices</div>
                <div class="stat-label">الأجهزة النشطة</div>
                <a asp-controller="Devices" asp-action="Index" class="stat-link">
                    عرض الكل <i class="fas fa-arrow-left ms-1"></i>
                </a>
            </div>
        </div>

        <!-- Today's Attendance -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon warning">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-value">@todayAttendance</div>
                <div class="stat-label">حضور اليوم</div>
                <a asp-controller="Attendance" asp-action="Index" class="stat-link">
                    عرض الكل <i class="fas fa-arrow-left ms-1"></i>
                </a>
            </div>
        </div>

    </div>

    <!-- Device Errors Alert -->
    @if (deviceErrors.Any())
    {
        <div class="alert alert-danger alert-custom">
            <h6 class="fw-bold mb-3">
                <i class="fas fa-exclamation-triangle me-2"></i>
                تنبيهات الأجهزة (@deviceErrors.Count)
            </h6>
            <ul class="mb-0">
                @foreach (var error in deviceErrors.Take(3))
                {
                    <li class="mb-2">
                        <strong>@error.Device?.DeviceName:</strong> @error.ErrorMessage
                        <small class="text-muted ms-2">@error.ErrorDateTime.ToString("hh:mm tt")</small>
                    </li>
                }
            </ul>
        </div>
    }

    <!-- Quick Actions -->
    <div class="quick-actions-section">
        <h4 class="section-title">
            <i class="fas fa-bolt me-2"></i>
            إجراءات سريعة
        </h4>

        <div class="row g-4">

            <div class="col-lg-3 col-md-6">
                <a asp-controller="Attendance" asp-action="Index" class="quick-action-card">
                    <div class="quick-action-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="quick-action-title">سجلات الحضور</div>
                </a>
            </div>

            <div class="col-lg-3 col-md-6">
                <a asp-controller="Reports" asp-action="DailyReport" class="quick-action-card">
                    <div class="quick-action-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="quick-action-title">التقارير</div>
                </a>
            </div>

            <div class="col-lg-3 col-md-6">
                <a asp-controller="Employees" asp-action="Index" class="quick-action-card">
                    <div class="quick-action-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="quick-action-title">إدارة الموظفين</div>
                </a>
            </div>

            <div class="col-lg-3 col-md-6">
                <a asp-controller="Devices" asp-action="Index" class="quick-action-card">
                    <div class="quick-action-icon">
                        <i class="fas fa-fingerprint"></i>
                    </div>
                    <div class="quick-action-title">إدارة الأجهزة</div>
                </a>
            </div>

        </div>
    </div>

</div>
