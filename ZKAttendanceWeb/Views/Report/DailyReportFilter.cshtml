@model ZKAttendanceWeb.ViewModels.DailyReportFilterViewModel

<h2>تقرير الحضور اليومي</h2>

<form asp-action="DailyReportFilter" method="post" class="mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <label for="SelectedBranchId" class="form-label">الفرع</label>
            <select asp-for="SelectedBranchId" class="form-select" asp-items="@(new SelectList(Model.Branches, "BranchId", "BranchName"))">
                <option value="">-- اختر فرعاً --</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="SelectedDeviceId" class="form-label">الجهاز</label>
            <select asp-for="SelectedDeviceId" class="form-select" asp-items="@(new SelectList(Model.Devices, "DeviceId", "DeviceName"))">
                <option value="">-- اختر جهازاً --</option>
            </select>
        </div>

        <div class="col-md-3">
            <label for="SelectedEmployeeId" class="form-label">الموظف</label>
            <select asp-for="SelectedEmployeeId" class="form-select" asp-items="@(new SelectList(Model.Employees, "EmployeeId", "EmployeeName"))">
                <option value="">-- اختر موظفاً --</option>
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">من تاريخ</label>
            <input asp-for="DateFrom" type="date" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">إلى تاريخ</label>
            <input asp-for="DateTo" type="date" class="form-control" />
        </div>

        <div class="col-md-12 text-end mt-3">
            <button type="submit" class="btn btn-primary">بحث</button>
        </div>
    </div>
</form>

@if (Model.Report != null && Model.Report.Items.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>اسم الموظف</th>
                <th>الإدارة</th>
                <th>أول حضور</th>
                <th>آخر خروج</th>
                <th>إجمالي الساعات</th>
                <th>الحالة</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Report.Items)
            {
                <tr>
                    <td>@item.EmployeeName</td>
                    <td>@item.Department</td>
                    <td>@item.FirstCheckIn?.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.LastCheckOut?.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(item.TotalWorkHours?.ToString(@"hh\:mm") ?? "-")</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">لا توجد سجلات لعرضها.</div>
}
